@model OnlineShop.Models.ProductTypes;
@{
    ViewData["Title"] = "Details";
}

<h2 class="text-info">Details Product Type</h2>
<form asp-action="Details" method="post">
    <div class="p-4 rounded border">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ProductType"></label>
            </div>
            <div class="col-5">
                <input asp-for="ProductType" readonly="readonly"/>
            </div>
            <span asp-validation-for="ProductType" class="text-danger"></span>
        </div>
        <div class="form-group row">
            @*<input type="submit" class="btn btn-primary" value="Update" />*@
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            <a class="btn btn-success" asp-action="Index">Back To List</a>
        </div>
    </div>
</form>
@section Scripts{

    @{await Html.RenderPartialAsync(partialViewName: "_ValidationScriptsPartial");}
}