@using OnlineShop.Models;
@model OnlineShop.Models.Products;
@{
    ViewData["Title"] = "Create";
}
<br />
<br />

<h2 class="text-info">Create Product List</h2>
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <h4 style="color:#f30f0f">@ViewBag.Message</h4>
        <div class="form-group row">

            <div class="col-2">

                <label asp-for="Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Price"></label>
            </div>
            <div class="col-5">
                <input asp-for="Price" />
            </div>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ProductColor"></label>
            </div>
            <div class="col-5">
                <input asp-for="ProductColor" />
            </div>
            <span asp-validation-for="ProductColor" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Image"></label>
            </div>
            <div class="col-5">
                <input asp-for="Image" type="file" />
            </div>
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="IsAvailable"></label>
            </div>
            <div class="col-5">
                <input asp-for="IsAvailable" type="checkbox" />
            </div>
            <span asp-validation-for="IsAvailable" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ProductTypeId"></label>
            </div>
            <div class="col-5">
                <select asp-for="ProductTypeId" asp-items="ViewBag.productTypeId"></select>
                @*<input asp-for="ProductTypeId" type="checkbox" />*@
            </div>
            <span asp-validation-for="ProductTypeId" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="SpecialTagId"></label>
            </div>
            <div class="col-5">
                <select asp-for="SpecialTagId" asp-items="ViewBag.SpecialTags"></select>
                @*<input asp-for="SpecialTagId" type="checkbox" />*@
            </div>
            <span asp-validation-for="SpecialTagId" class="text-danger"></span>
        </div>




        <div class="form-group row">
            <input type="submit" class="btn btn-primary" value="Save" />
            <a class="btn btn-success" asp-action="Index">Back To List</a>
        </div>
    </div>
</form>

