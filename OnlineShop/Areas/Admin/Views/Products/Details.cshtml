@using OnlineShop.Models;
@model OnlineShop.Models.Products;
@{
    ViewData["Title"] = "Details";
}
<br />
<br />

<h2 class="text-info">Product Details</h2>
<form asp-action="" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" readonly="readonly"/>
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Price" readonly="readonly"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Price" readonly="readonly"/>
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="ProductColor"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ProductColor" readonly="readonly"/>
                </div>
                <span asp-validation-for="ProductColor" class="text-danger"></span>
            </div>
            @*<div class="form-group row">
                <div class="col-3">
                    <label asp-for="Image"></label>
                </div>
                <div class="col-8">
                    <input type="hidden" asp-for="Id" />
                    <input asp-for="Image" readonly="readonly"/>
                </div>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>*@
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="IsAvailable"></label>
                </div>
                <div class="col-8">
                    <input asp-for="IsAvailable" readonly="readonly"/>
                </div>
                <span asp-validation-for="IsAvailable" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="ProductTypeId"></label>
                </div>
                <div class="col-8">
                    @*<select asp-for="ProductTypeId" asp-items="ViewBag.productTypeId"></select>*@
                    <input asp-for="ProductTypeId"  readonly="readonly"/>
                </div>
                <span asp-validation-for="ProductTypeId" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="SpecialTagId"></label>
                </div>
                <div class="col-8">
                    @*<select asp-for="SpecialTagId" asp-items="ViewBag.SpecialTags"></select>*@
                    <input asp-for="SpecialTagId" readonly="readonly"/>
                </div>
                <span asp-validation-for="SpecialTagId" class="text-danger"></span>
            </div>
            <div class="form-group row">
                @*<input type="submit" class="btn btn-primary" value="Update" />*@
                <a class="btn btn-info" type="button" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                <a class="btn btn-success" asp-action="Index">Back To List</a>
            </div>
        </div>

        <div class="col-1"></div>
        <div class="col-3">
            <img src="@Model.Image" width="100%" style="border:1px solid #d9cfcf; border-radius:5px;"/>
        </div>
    </div>
</form>


@section Scripts{

    @{await Html.RenderPartialAsync(partialViewName: "_ValidationScriptsPartial");}
}