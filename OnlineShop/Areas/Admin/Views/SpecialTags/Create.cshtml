@model OnlineShop.Models.SpecialTags;
@{
    ViewData["Title"] = "Create";
}
<br />
<br />

<h2 class="text-info">Create Spacial Tag Name</h2>
<form asp-action="Create" method="post">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="TagName"></label>
            </div>
            <div class="col-5">
                <input asp-for="TagName" />
            </div>
            <span asp-validation-for="TagName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <input type="submit" class="btn btn-primary" value="Save" />
            <a class="btn btn-success" asp-action="Index">Back To List</a>
        </div>
    </div>
</form>

