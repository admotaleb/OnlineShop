@using OnlineShop.Models;
@model List<Products>

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h2 class="my-0 font-weight-normal">
                        <label style="font-size:23px; color:steelblue">@product.Name</label>
                    </h2>
                </div>
                <img src="@product.Image" class="card-img-top" alt="card image" style="height:300px;"/>
                <div class="card-header">
                    <div class="d-flex justify-content-between align-content-center">
                        <div class="btn-group">
                            <label style="font-size:20px; color:#a41804"><b>Price: @product.Price</b></label>
                        </div>
                        <a asp-action="Details" asp-controller="Home" class="btn btn-default pull-right btn-outline-info" asp-route-id="@product.Id">Details</a>
                    </div>
                </div>
            </div>

        </div>

    }

</div>
